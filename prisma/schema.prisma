// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ProjectStatus {
  IN_PROGRESS
  COMPLETED
}

model project {
  id          String              @id @default(uuid())
  name        String
  description String
  status      ProjectStatus?      @default(IN_PROGRESS)
  developers  project_has_devs[]
  roles       project_has_roles[]
}

model developer {
  id       String                @id @default(uuid())
  name     String
  email    String
  projects project_has_devs[]
  roles    developer_has_roles[]
}

model role {
  id         String                @id @default(uuid())
  projects   project_has_roles[]
  developers developer_has_roles[]
  specId     String?                @unique
  speciality speciality?            @relation(fields: [specId], references: [id])
}

model speciality {
  id   String @id @default(uuid())
  name String
  role role?
}

model project_has_devs {
  id        String     @id @default(uuid())
  projectId String?
  project   project?   @relation(fields: [projectId], references: [id])
  devId     String?
  dev       developer? @relation(fields: [devId], references: [id])
}

model project_has_roles {
  id        String   @id @default(uuid())
  projectId String?
  project   project? @relation(fields: [projectId], references: [id])
  roleId    String?
  role      role?    @relation(fields: [roleId], references: [id])
}

model developer_has_roles {
  id          String     @id @default(uuid())
  developerId String?
  developer   developer? @relation(fields: [developerId], references: [id])
  roleId      String?
  role        role?      @relation(fields: [roleId], references: [id])
}
